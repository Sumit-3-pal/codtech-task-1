#include <stdio.h>

void create_and_write_file(const char *filename) {
    FILE *file = fopen(filename, "w"); // "w" mode creates or overwrites the file
    if (file == NULL) {
        printf("Error creating file.\n");
        return;
    }
    fprintf(file, "This is the first line in the file.\n");
    fclose(file);
    printf("File created and data written successfully.\n");
}

void read_file(const char *filename) {
    FILE *file = fopen(filename, "r"); // "r" mode to read file
    char ch;

    if (file == NULL) {
        printf("File does not exist.\n");
        return;
    }

    printf("Reading File Content:\n");
    while ((ch = fgetc(file)) != EOF) {
        putchar(ch);
    }

    fclose(file);
}

void append_to_file(const char *filename) {
    FILE *file = fopen(filename, "a"); // "a" mode appends to file
    if (file == NULL) {
        printf("Error opening file to append.\n");
        return;
    }

    fprintf(file, "This line was appended.\n");
    fclose(file);
    printf("Data appended successfully.\n");
}

int main() {
    const char *filename = "sample_file.txt";

    create_and_write_file(filename);
    read_file(filename);

    append_to_file(filename);
    read_file(filename); // Read again to show appended data

    return 0;
}
